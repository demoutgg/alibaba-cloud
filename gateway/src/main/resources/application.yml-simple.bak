server:
  port: 8088
spring:
  application:
    name: gateway
  cloud:
    #gateway的优置
    gateway:
      #路由配置
      routes:
        - id: order_ser #路由的唯一标识，路由到order
          uri: http://localhost:8010 #需要转发的地址
          #断言规则 用于路由规则
          predicates:
            - Path=/order_ser/**
            # htto://localhost:8088/order-ser/order/add 路由到 http://ocalhost:8010/order-ser/order/add
          filters:
            - StripPrefix=1 #转发之前去掉第一层路径 http://ocalhost:8010/order/add